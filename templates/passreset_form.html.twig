{% extends "master.html.twig" %}

{% block title %}Password reset{% endblock %}

{% block navbarSign %}
    <div class="collapse navbar-collapse" id="navbar-ex-collapse">
        <ul class="nav navbar-nav navbar-right">
            <li class="active">
                <a href="/signin">Sign In</a>
            </li>
            <li>
                <a href="/signup">Sign Up</a>
            </li>
        </ul>
    </div>
{% endblock navbarSign %}

{% block container %}
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <h1>Password reset</h1>
                {% if errorList %}
                    <ul>
                        {% for error in errorList %}
                            <li>{{ error }}</li>
                        {% endfor %}
                    </ul>
                {% endif %}
                
                <h4 class="text-center"><i class="ion-log-in"></i>Enter your new password below.</h4>
                <form method="post">
                    <div class="form-group has-feedback">
                        <input class="form-control input-lg" type="password" name="pass1" placeholder="Password" autofocus>
                        <span class="ion-key form-control-feedback"></span>
                    </div>
                    <div class="form-group has-feedback">
                        <input class="form-control input-lg" type="password" name="pass2" placeholder="Password (repeated)" autofocus>
                        <span class="ion-key form-control-feedback"></span>
                    </div>
                    <button type="submit" class="btn btn-block btn-primary">Request password reset</button>
                    <br/><br/><br/><br/>
                </form>
            </div>
        </div>
    </div>
{% endblock container %}
