{% extends "master2.html.twig" %}

{% block title %}Add Album{% endblock %}

{% block navbarSign %}
    <div class="collapse navbar-collapse" id="navbar-ex-collapse">
        <ul class="nav navbar-nav navbar-right">
            <li class="active"><a href="/profile"><b>{{ imagouser.name }} | Profile</b></a></li>
            <li><a href="/photos">Photos</a></li>
            <li><a href="/photos/add">Add Photo</a></li>
            <li><a href="/albums">Albums</a></li>
            <li><a href="/albums/add">Add Album</a></li>
            <li><a href="/signout">Sign Out</a></li>
        </ul>
    </div>
{% endblock navbarSign %}

{% block container %}
    <br><br><br><br><br><br>
    {% if errorList %}
        <ul class="errorList">
            {% for error in errorList %}
                <li>{{ error }}</li>
            {% endfor %}
        </ul>
    {% endif %}

    <div class="container">
        <div class="center-form panel">
            <div class="panel-body" style="text-align:center">
                <form method="post" enctype="multipart/form-data">
                        Album Title: <input type="text" name="albumTitle" value="{{v.albumTitle}}" ><br>
                        Date: <input type="date" name="albumDate" value="{{v.albumDate}}"><br>
                        <input type="submit" value="Create Album" name="submit" id="submit">
                </form>
            </div>
        </div>
    </div>
{% endblock container %}{# empty Twig template #}
