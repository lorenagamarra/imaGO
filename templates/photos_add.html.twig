{% extends "master2.html.twig" %}

{% block title %}Add Photo{% endblock %}

{% block container %}
    {% if errorList %}
    <ul class="errorList">
        {% for error in errorList %}
            <li>{{ error }}</li>
        {% endfor %}
    </ul>
    {% endif %}
    
    <form method="post" enctype="multipart/form-data">
        Image: <input type="file" name="image" multiple><br>
        {% if v.imagePath %}
            <img width="50" src="/{{v.imagePath}}">
        {% endif %}
        <input type="submit" value="Save Photo">
    </form>    
{% endblock container %}
