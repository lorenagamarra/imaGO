{% extends "master.html.twig" %}

{% block title %}imaGO - Sign In{% endblock %}

{% block navbarSign %}
    <div class="collapse navbar-collapse" id="navbar-ex-collapse">
        <ul class="nav navbar-nav navbar-right">
            <li class="active">
                <a href="/signin">Sign In</a>
            </li>
            <li>
                <a href="/signup">Sign Up</a>
            </li>
        </ul>
    </div>
{% endblock navbarSign %}



{% block container %}
    <div class="container">
        <div class="center-form panel">
            <div class="panel-body">

                {% if error %}
                    <p class="errorList">Login failed try again.</p>
                {% endif %}

                <button class="btn btn-block btn-facebook">
                    <i class="ion-social-facebook"></i>Sign in with Facebook
                </button>

                <div class="signup-or-separator">
                    <hr>
                </div>

                <h4 class="text-center"><i class="ion-log-in"></i>Sign in</h4>

                <form name="loginForm" method="post">
                    <div class="form-group has-feedback"">
                        <input class="form-control input-lg" type="text" name="email" placeholder="Email" autofocus>
                        <span class="ion-at form-control-feedback"></span>
                        <div class="help-block" >

                        </div>
                    </div>

                    <div class="form-group has-feedback">
                        <input class="form-control input-lg" type="password" name="pass1" placeholder="Password" autofocus>
                        <span class="ion-key form-control-feedback"></span>
                        <div class="help-block">

                        </div>
                    </div>

                    <button type="submit" class="btn btn-block btn-success">Sign in</button>

                    <br/>

                    <p class="text-center text-muted">
                        <small>Don't have an account yet? <a href="/signup">Sign up</a></small>
                        <br/>
                        <small>If you forgot your password you can <a href="/passreset">reset it</a>.</small>
                    </p>
                </form>
            </div>
        </div>
    </div>
{% endblock container %}




