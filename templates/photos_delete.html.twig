{% extends "master.html.twig" %}

{% block title %}imaGO - Photo Delete{% endblock %}

{% block navbarSign %}
    <div class="collapse navbar-collapse" id="navbar-ex-collapse">
        <ul class="nav navbar-nav navbar-right">
            <li class="active"><a href="/photos">Photos</a></li>
            <li><a href="/photos/add">Add Photo</a></li>
            <li><a href="/albums">Albums</a></li>
            <li><a href="/profile"><b>{{ imagouser.name }}</b></a></li>
            <li><a href="/signout">Sign Out</a></li>
        </ul>
    </div>
{% endblock navbarSign %}



{% block container %}
    <div class="container">
        <div class="center-form panel">
            <div class="panel-body">
                <br><br><br>
                <p> Are you sure you want to delete this photo? This photo will be deleted from your photo list and all yours albums!!</p>
                <div class="col-md-3">
                    <img src="/photoview/{{photo.id}}" width="250" class="img-responsive">
                </div>
                <br>
                <form style="display: inline-block" action="/photos">
                    <input type="submit" value="Cancel" class="btn btn-success">
                </form>
                <form style="display: inline-block" method="post">
                    <input type="hidden" name="delete" value="confirmed">
                    <input type="submit" value="Yes, delete" class="btn btn-danger">
                </form>
                <br><br><br>
            </div>
        </div>
    </div>
{% endblock container %}
