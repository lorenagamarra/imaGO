{% extends "master2.html.twig" %}

{% block title %}imaGO - Add Photos on Album{% endblock %}

{% block navbarSign %}
    <div class="collapse navbar-collapse" id="navbar-ex-collapse">
        <ul class="nav navbar-nav navbar-right">
            <li><a href="/photos">Photos</a></li>
            <li class="active"><a href="/albums">Albums</a></li>
            <li><a href="/albums/add">Add Album</a></li>
            <li><a href="/profile"><b>{{ imagouser.name }}</b></a></li>
            <li><a href="/signout">Sign Out</a></li>
        </ul>
    </div>
{% endblock navbarSign %}
{% block container %}
    <div class="row">
        <div class="col-md-12">
            <div class="section">
                <div class="container">
                    {% if errorList %}
                        <ul class="errorList">
                            {% for error in errorList %}
                                <li>{{ error }}</li>
                                {% endfor %}
                        </ul>
                    {% endif %}
                    <div class="row">
                        <div class="col-md-12">
                            <h1 class="text-center">Add Photos on Album: {{album.title}}</h1>
                        </div>
                    </div>
                    <br>
                    <h3>Your photo list:</h3>
                    <br>
                    <div class="row">
                        {% for p in photoIdList %}
                            <div  class="col-xs-12 col-sm-6 col-lg-3">
                                <div id="container">
                                    <img src="/photoview/{{p.id}}" width="250" class="image">
                                    <div class="middle">
                                        <a href="/albums/{{album.id}}/addphoto/{{p.id}}"><span class="glyphicon glyphicon-plus rightbottom" aria-hidden="true"></span></a>
                                    </div>
                                </div>
                                <br>
                            </div>

                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock container %}

