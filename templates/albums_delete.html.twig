{% extends "master2.html.twig" %}

{% block title %}Delete Album{% endblock %}

{% block navbarSign %}
    <div class="collapse navbar-collapse" id="navbar-ex-collapse">
        <ul class="nav navbar-nav navbar-right">
            <li><a href="/photos">Photos</a></li>
            <li class="active"><a href="/albums">Albums</a></li>
            <li><a href="/albums/add">Add Album</a></li>
            <li><a href="/profile"><b>{{ imagouser.name }}</b></a></li>
            <li><a href="/signout">Sign Out</a></li>
        </ul>
    </div>
{% endblock navbarSign %}

{% block container %}
    <br><br><br><br><br><br>
    {% if errorList %}
        <ul class="errorList">
            {% for error in errorList %}
                <li>{{ error }}</li>
            {% endfor %}
        </ul>
    {% endif %}

    <div class="container">
        <div class="center-form panel">
            <div class="panel-body" style="text-align:center">
              
                <p> Are you sure you want to delete this Album? All photos in this album will not be deleted from your photo list!<br>
                Title: {{album.title}}<br>
                Date: {{album.date}}</p>
                <br>
                <form style="display: inline-block" action="/albums">
                    <input type="submit" value="Cancel" class="btn btn-success">
                </form>
                <form style="display: inline-block" method="post">
                    <input type="hidden" name="delete" value="confirmed">
                    <input type="submit" value="Yes, delete" class="btn btn-danger">
                </form>
            </div>
        </div>
    </div>
{% endblock container %}{# empty Twig template #}
