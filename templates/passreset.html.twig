{% extends "master.html.twig" %}

{% block title %}Password reset{% endblock %}
{% block navbarSign %}
    <div class="collapse navbar-collapse" id="navbar-ex-collapse">
        <ul class="nav navbar-nav navbar-right">
            <li class="active">
                <a href="/signin">Sign In</a>
            </li>
            <li>
                <a href="/signup">Sign Up</a>
            </li>
        </ul>
    </div>
{% endblock navbarSign %}
{% block container %}
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <h3 class="text-center"><i class="ion-log-in"></i>Password reset</h3>
                {% if error %}
                    <p><b>We couldn't find email you provided in our system.
                            Try again or register a new account</b></p>
                        {% endif %}

                <form method="POST">
                    <div class="form-group has-feedback" >
                        <input class="form-control input-lg" type="email" id="email" name="email" placeholder="Email" autofocus value="{{v.email}}">
                    </div>
                    <button type="submit" class="btn btn-block btn-primary">Request password reset</button>
                    <br/><br/><br/><br/>
                </form>
            </div>
        </div>
    </div>
{% endblock container%}
